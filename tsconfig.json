{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2018",
    "lib": ["es2020", "dom"],
    "jsx": "react",
    "jsxFactory": "h",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importsNotUsedAsValues": "preserve",
    "inlineSources": true,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "webpack"],
    "typeRoots": ["./node_modules/@types", "./lib/types"]
  },
  "include": ["./lib/**/*.ts", "./lib/**/*.tsx", "client/scripts/**/*.ts"],
  "exclude": ["./lib/compile.ts", "node_modules", "src", "dist"]
}
